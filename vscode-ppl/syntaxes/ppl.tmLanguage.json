{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Pipeline DSL",
  "scopeName": "source.ppl",
  "fileTypes": ["ppl"],
  "patterns": [
    { "include": "#comments"  },
    { "include": "#keywords"  },
    { "include": "#strings"   },
    { "include": "#operators" },
    { "include": "#numbers"   }
  ],
  "repository": {
    "comments": {
      "match": "#.*$",
      "name": "comment.line.number-sign.ppl"
    },
    "keywords": {
      "patterns": [
        {
          "match": "\\b(source|save|merge|join|on)\\b",
          "name": "keyword.control.io.ppl"
        },
        {
          "match": "\\b(filter|select|group|by|count|sort|rename|add|drop|limit|distinct)\\b",
          "name": "keyword.control.transform.ppl"
        },
        {
          "match": "\\b(sum|avg|min|max)\\b",
          "name": "keyword.control.aggregate.ppl"
        },
        {
          "match": "\\b(print|schema|inspect|head|assert|fill)\\b",
          "name": "keyword.control.inspect.ppl"
        },
        {
          "match": "\\b(asc|desc|mean|median|mode|forward|backward)\\b",
          "name": "keyword.other.modifier.ppl"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.ppl",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "match": "\\\\.",
          "name": "constant.character.escape.ppl"
        }
      ]
    },
    "operators": {
      "match": "(>=|<=|!=|==|>|<|=|\\*|\/|\\+|-)",
      "name": "keyword.operator.ppl"
    },
    "numbers": {
      "match": "\\b\\d+(\\.\\d+)?\\b",
      "name": "constant.numeric.ppl"
    }
  }
}
