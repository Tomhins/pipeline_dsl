{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Pipeline DSL",
  "scopeName": "source.ppl",
  "fileTypes": ["ppl"],
  "patterns": [
    { "include": "#comments"  },
    { "include": "#keywords"  },
    { "include": "#variables" },
    { "include": "#strings"   },
    { "include": "#operators" },
    { "include": "#numbers"   }
  ],
  "repository": {
    "comments": {
      "match": "#.*$",
      "name": "comment.line.number-sign.ppl"
    },
    "keywords": {
      "patterns": [
        {
          "match": "\\b(source|save|merge|join|on|foreach|include)\\b",
          "name": "keyword.control.io.ppl"
        },
        {
          "match": "\\b(filter|where|select|group|by|count|sort|rename|add|drop|limit|distinct|sample|trim|uppercase|lowercase|cast|replace|pivot)\\b",
          "name": "keyword.control.transform.ppl"
        },
        {
          "match": "\\b(parse_date|extract|date_diff|filter_date|truncate_date|ts_sort)\\b",
          "name": "keyword.control.timestamp.ppl"
        },
        {
          "match": "\\b(sum|avg|min|max|agg)\\b",
          "name": "keyword.control.aggregate.ppl"
        },
        {
          "match": "\\b(print|schema|inspect|head|assert|fill|log|set|env|timer)\\b",
          "name": "keyword.control.inspect.ppl"
        },
        {
          "match": "\\b(try|on_error|skip)\\b",
          "name": "keyword.control.error.ppl"
        },
        {
          "match": "\\b(if|then|else|and|or)\\b",
          "name": "keyword.control.logic.ppl"
        },
        {
          "match": "\\b(asc|desc|mean|median|mode|forward|backward|drop|inner|left|right|outer|chunk|start|stop|lap)\\b",
          "name": "keyword.other.modifier.ppl"
        },
        {
          "match": "\\b(from|as|in|to|year|month|day|hour|minute|second|weekday|quarter|days|hours|minutes|seconds|week)\\b",
          "name": "keyword.other.modifier.ppl"
        },
        {
          "match": "\\b(int|float|str|datetime|bool)\\b",
          "name": "support.type.ppl"
        }
      ]
    },
    "variables": {
      "match": "\\$\\w+",
      "name": "variable.other.ppl"
    },
    "strings": {
      "name": "string.quoted.double.ppl",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "match": "\\\\.",
          "name": "constant.character.escape.ppl"
        }
      ]
    },
    "operators": {
      "match": "(>=|<=|!=|==|>|<|=|\\*|\\/|\\+|-|%)",
      "name": "keyword.operator.ppl"
    },
    "numbers": {
      "match": "\\b\\d+(\\.\\d+)?\\b",
      "name": "constant.numeric.ppl"
    }
  }
}
